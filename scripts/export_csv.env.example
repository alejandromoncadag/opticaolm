# Copia este archivo a scripts/.env.export_csv y edita valores.
OPTICA_API_URL=https://opticaolm-production.up.railway.app
OPTICA_ADMIN_USER=admin
OPTICA_ADMIN_PASS=CAMBIA_ESTA_PASSWORD

# Carpeta destino (por defecto: ~/Desktop/opticaolm_exports)
OUTPUT_DIR=/Users/alejandromoncadag/Desktop/opticaolm_exports

# Control de espacio
KEEP_DAYS=30
# Si MAX_TOTAL_MB <= 0, no borra por tamaÃ±o (solo por KEEP_DAYS)
MAX_TOTAL_MB=0
MIN_FREE_GB=3

# Tipos: consultas,ventas,pacientes,historias_clinicas,sucursales,diccionario_columnas_fisico
EXPORT_TYPES=consultas,ventas,pacientes,historias_clinicas,sucursales

# all, 1 (EdoMex), 2 (Playa)
SUCURSAL_ID=all
SPLIT_BY_SUCURSAL=true
DELIMITER=comma

# month | daily | custom
RANGE_MODE=month
CUSTOM_DESDE=2026-01-01
CUSTOM_HASTA=2026-12-31
