# =========================
# Backend runtime
# =========================

# PostgreSQL connection string used by FastAPI.
# Example:
# DB_CONNINFO=host=localhost port=5432 dbname=eyecare user=postgres password=postgres
DB_CONNINFO=host=localhost port=5432 dbname=eyecare user=postgres password=postgres

# JWT signing secret (REQUIRED in prod).
JWT_SECRET=CHANGE_ME_LONG_RANDOM_SECRET

# CORS origins (comma-separated). Use your real frontend URL(s) in prod.
# Example: FRONTEND_ORIGIN=https://app.opticaolm.com,https://admin.opticaolm.com
FRONTEND_ORIGIN=http://localhost:5173,http://127.0.0.1:5173
# Optional regex for wildcard origins (useful for Cloudflare Pages previews).
# Default in code already allows: https://opticaolm.pages.dev and https://*.opticaolm.pages.dev
FRONTEND_ORIGIN_REGEX=^https://([a-z0-9-]+\\.)?opticaolm\\.pages\\.dev$

# =========================
# Google Calendar (optional)
# =========================
ENABLE_GOOGLE_CALENDAR=false
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_OAUTH_REDIRECT_URI=http://127.0.0.1:8000/oauth2/callback
GOOGLE_OAUTH_REFRESH_TOKEN=
GOOGLE_OAUTH_REFRESH_TOKENS={}
GOOGLE_CALENDAR_IDS={}
GOOGLE_SERVICE_ACCOUNT_FILE=
GOOGLE_SERVICE_ACCOUNT_JSON=

# =========================
# Agenda config
# =========================
AGENDA_START_HOUR=10
AGENDA_END_HOUR=20
AGENDA_STEP_MIN=30
AGENDA_WORKDAYS=0,1,2,3,4,5
AGENDA_CANCEL_URL_TEMPLATE=
AGENDA_SUCURSAL_CONTACTS={}

# =========================
# Setup/seed helpers (used by scripts)
# =========================
DB_NAME=eyecare
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres

SEED_ADMIN_USERNAME=admin
SEED_ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
SEED_ADMIN_RESET_PASSWORD=true
